<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"   android:layout_gravity="right|top"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/Red"
        android:textSize="10dp"

        />

    <ImageView
        android:id="@+id/currency_eth_flag"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/coins" />
    <Spinner
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:entries="@array/flags"
        ></Spinner>

    <EditText
        android:layout_width="200dp"
        android:textStyle="italic"
        android:layout_height="40dp"         android:inputType="numberDecimal"

        android:gravity="center"
        android:hint="@string/enter_amount"
        android:textSize="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/eth" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
android:textStyle="italic"
        android:hint="Equivalent amount in ETH" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/convert_currency_eth"
        android:textStyle="italic"
        android:background="@drawable/custom_btn_orange"
        android:text="@string/convert"
        android:textColor="@color/White" />


</LinearLayout>